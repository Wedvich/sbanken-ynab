{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": [
      "dom",
      "esnext",
      "webworker"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "target": "esnext"
  },
  "include": [
    "src/**/*",
    ".eslintrc.js",
    ".stylelintrc.js",
    "babel.config.js",
    "jest.config.js",
    "server.js",
    "webpack.config.*.js"
  ],
}
