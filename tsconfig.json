{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "target": "esnext"
  },
  "include": [
    "src/**/*",
    ".eslintrc.js",
    ".stylelintrc.js",
    "babel.config.js",
    "webpack.config.*.js"
  ],
}
